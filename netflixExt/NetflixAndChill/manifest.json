{
  "manifest_version": 2,
  "name": "NetflixAndChill",
  "short_name": "Netflix-n-Chill",
  "description": "Netflix and Child yo, with snacks!",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*", "http://www.netflix.com/*", "<all_urls>"
        ],
        "js": ["jquery-2.1.4.min.js", "main.js"]
    }
  ], 
  "permissions": ["https://www.netflix.com/*", "http://www.netflix.com/*", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "assets/icon_128.png",
    "default_popup": "popup.html",
    "default_title": "Netflix and Child"
  }
}
